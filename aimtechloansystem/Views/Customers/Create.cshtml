@model aimtechloansystem.Models.Customer

@{
    ViewData["Title"] = "Create";
}

<nav class="navbar navbar-expand-md fixed-top" style="background-color:#f2131f">

    <div class="collapse navbar-collapse">
        <ul class="navbar-nav mr-auto">

            <li class="nav-item">
                <a asp-action="CustomerList" asp-controller="Customers">
                    <img src="~/images/aimtechlogo.jpg" sizes="50px" alt="logo" width="50px" height="35px" />
                </a>

            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="CustomerList" asp-controller="Customers">
                    <h5 style="color:white;">AIM TECH LOAN</h5>
                </a>
            </li>
            <li class="nav-item"><a class="nav-link" asp-controller="Customers" asp-action="Index" style="color:white">CUSTOMERS</a> </li>
            <li class="nav-item"><a class="nav-link" asp-controller="EMI" asp-action="EndOfmonths" style="color:white">REPORTS</a> </li>
            <li class="nav-item"><a class="nav-link" asp-controller="Customers" asp-action="PaidCustomerList" style="color:white">HISTORY</a> </li>

        </ul>
    </div>
    <div class="form-inline">
        @await Html.PartialAsync("_loginPartial")
    </div>
</nav>




<h5>Create Customer Loan</h5>

<form asp-action="Create">
    <table class="col-lg-12 table table-sm table-bordered" align="center">

        <tr style="background-color:#b0dfff; ">
            <td align="right"><b><label asp-for="CustomerName" class="control-label"></label></b></td>
            <td>
                <input asp-for="CustomerName" class="form-control col-8" />
                <span asp-validation-for="CustomerName" class="text-danger col-8"></span>
            </td>

            <td align="right"><b><label asp-for="Mobile" class="control-label"></label></b></td>
            <td>
                <input asp-for="Mobile" class="form-control col-8" />
                <span asp-validation-for="Mobile" class="text-danger col-8"></span>
            </td>
        </tr>
        <tr style="background-color:#73c7ff;">
            <td align="right"><b><label asp-for="Address" class="control-label"></label></b></td>
            <td colspan="3">
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger col-8"></span>
            </td>
        </tr>
        <tr style="background-color:#b0dfff; ">
            <td align="right"><b><label asp-for="LoanAmount" class="control-label"></label></b></td>
            <td>
                <input asp-for="LoanAmount" id="LoanAmount" onchange="calfee()" class="form-control col-8" />
                <span asp-validation-for="LoanAmount" class="text-danger col-8"></span>
            </td>

            <td align="right"><b><label asp-for="Fee" class="control-label"></label></b></td>
            <td>
                <input asp-for="Fee" id="Fee" class="form-control col-8" />
                <span asp-validation-for="Fee" class="text-danger col-8"></span>
            </td>
        </tr>
        <tr style="background-color:#73c7ff;">
            <td align="right"><b><label asp-for="Date" class="control-label"></label></b></td>
            <td>
                <input asp-for="Date" class="form-control col-8" />
                <span asp-validation-for="Date" class="text-danger col-8"></span>
            </td>

            <td align="right"><b><label asp-for="NextPaid" class="control-label"></label></b></td>
            <td>
                <input asp-for="NextPaid" class="form-control col-8" />
                <span asp-validation-for="NextPaid" class="text-danger col-8"></span>
            </td>

        </tr>
        <tr style="background-color:#b0dfff; ">
            <td align="right"><b><label asp-for="Months" class="control-label"></label></b></td>
            <td>
                <input asp-for="Months" class="form-control col-8" />
                <span asp-validation-for="Months" class="text-danger col-8"></span>
            </td>

            <td align="right"><b><label asp-for="Percent" class="control-label"></label></b></td>
            <td>

                <select asp-for="Percent" id="Percent" class="form-control col-8">
                    <option value="">Select Percent</option>
                    <option selected value="1.0">1.0</option>
                    <option value="1.5">1.5</option>
                    <option value="2.0">2.0</option>
                    <option value="2.5">2.5</option>
                    <option value="3.0">3.0</option>
                    <option value="5.0">5.0</option>
                    <option value="10.00">10.00</option>
                </select>
                <span asp-validation-for="Percent" class="text-danger col-8"></span>
            </td>

        </tr>
        <tr style="background-color:#73c7ff;">
            <td align="left"><a asp-action="Index">Back to List</a></td>
            <td colspan="3" align="right"><input type="submit" value="Create" onclick="msg()" class="btn btn-primary" /></td>
        </tr>
    </table>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


<script>

    function calfee() {
        
        var loanamt = $('#LoanAmount').val();

        var fee = loanamt / 100 * 2;
        $('#Fee').val(fee);

    }

</script>
<script>
    function msg() {
        swal("Good job!", "You clicked the button!", "success")
    }
</script>