@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}
<div>
        <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">

            <table border="0" align="center" >
                <tr>
                    <td colspan="2" align="center">
                        <h4>Log in.</h4>
                    </td>
                    <td rowspan="6">
                        <img src="~/images/aimlogo.jpg" width="300px" height="400px" alt="Logo" />
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </td>

                </tr>
                <tr>
                    <td align="right">
                        <i class="fas fa-user"></i>
                        @*<label asp-for="Email" class="custom-label"></label>*@
                    </td>
                    <td>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        @*<label asp-for="Password" class="custom-label"></label>*@
                        <i class="fas fa-lock"></i>
                    </td>
                    <td>
                        <input asp-for="Password" id="psw" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        @*<label asp-for="RememberMe" class="custom-label"> </label>*@
                    </td>
                    <td>
                        <input asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        
                    </td>
                    <td align="right">
                        <button type="submit" class="btn btn-outline-primary">Log in</button>
                    </td>
                </tr>

            </table>
        </form>

    </div>


