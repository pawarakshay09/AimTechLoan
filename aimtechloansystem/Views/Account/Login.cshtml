<script>
    $('#ShowPassword').hover(function Show() {
        //Change the attribute to text
        $('#psw').attr('type', 'text');
        $('#ShowPassword').removeClass('fa fa-eye-slash').addClass('fa fa-eye');
    },
        function () {
            //Change the attribute back to password
            $('#psw').attr('type', 'password');
            $('#ShowPassword').removeClass('fa fa-eye').addClass('fa fa-eye-slash');
        }
    );
</script>
